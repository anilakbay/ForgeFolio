    <!-- Custom Navbar & Smooth Scroll Script -->
    <script>
        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });

        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 80,
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Mobile menu toggle - FIXED
        function toggleMobileMenu() {
            console.log('Hamburger menu clicked!');
            const navbarLinks = document.querySelector('.navbar-links');
            const menuToggle = document.getElementById('mobileMenuToggle');
            const navbar = document.querySelector('.navbar');
            
            if (!navbarLinks || !menuToggle) {
                console.error('Elements not found!');
                return;
            }
            
            if (navbarLinks.classList.contains('mobile-open')) {
                // CLOSE menu
                navbarLinks.classList.remove('mobile-open');
                navbarLinks.style.display = 'none';
                menuToggle.innerHTML = '<i class="fas fa-bars"></i>';
            } else {
                // OPEN menu
                navbarLinks.classList.add('mobile-open');
                navbarLinks.style.display = 'flex';
                navbarLinks.style.flexDirection = 'column';
                navbarLinks.style.position = 'absolute';
                navbarLinks.style.top = '100%';
                navbarLinks.style.left = '0';
                navbarLinks.style.right = '0';
                navbarLinks.style.background = 'rgba(255,255,255,0.98)';
                navbarLinks.style.padding = '1.5rem';
                navbarLinks.style.boxShadow = '0 4px 10px rgba(0,0,0,0.1)';
                navbarLinks.style.gap = '1rem';
                navbarLinks.style.zIndex = '999';
                
                // Force navbar to be solid and links to be dark
                if (navbar && !navbar.classList.contains('scrolled')) {
                    navbar.classList.add('scrolled');
                }
                
                // Force dark text color on mobile menu links
                const links = navbarLinks.querySelectorAll('a');
                links.forEach(link => {
                    link.style.color = '#2d3748';
                });
                
                menuToggle.innerHTML = '<i class="fas fa-times"></i>';
            }
        }

        // Mobile menu toggle
        const mobileToggle = document.querySelector('.mobile-menu-toggle');
        const navbarLinks = document.querySelector('.navbar-links');
        
        if (mobileToggle) {
            mobileToggle.addEventListener('click', function() {
                navbarLinks.classList.toggle('mobile-active');
            });
        }
    </script>
