﻿
    @{
        Layout = null;
    }

    <!DOCTYPE html>

    <html class="no-js" lang="en">

    @await Component.InvokeAsync("_HeadComponentPartial")

    <body id="top">
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" style="position: fixed; top: 20px; right: 20px; z-index: 9999; padding: 15px; background: #4CAF50; color: white; border-radius: 5px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                @TempData["SuccessMessage"]
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" style="position: fixed; top: 20px; right: 20px; z-index: 9999; padding: 15px; background: #f44336; color: white; border-radius: 5px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                @TempData["ErrorMessage"]
            </div>
        }

        @await Component.InvokeAsync("_NavbarComponentPartial")

        @await Component.InvokeAsync("_FeatureComponentPartial")

        @await Component.InvokeAsync("_AboutComponentPartial")

        @await Component.InvokeAsync("_PortfolioComponentPartial")

        @await Component.InvokeAsync("_TestimonialComponentPartial")

        @await Component.InvokeAsync("_StatisticComponentPartial")

        @await Component.InvokeAsync("_ContactComponentPartial")

        @await Component.InvokeAsync("_FooterComponentPartial")

    </body>

    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                alert.style.opacity = '0';
                alert.style.transition = 'opacity 0.5s';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            });
        }, 5000);
    </script>

    </html>