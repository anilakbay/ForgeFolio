﻿@{
    ViewData["Title"] = "ForgeFolio - Portfolio";
    Layout = null; // Public page, no admin layout
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            background: #f8f9fa;
        }


        /* Navbar - Professional Design */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            padding: 0.75rem 0;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            background: rgba(0,0,0,0.05);
            backdrop-filter: blur(10px);
        }

        .navbar.scrolled {
            background: rgba(255,255,255,0.95);
            box-shadow: 0 4px 30px rgba(0,0,0,0.08);
            backdrop-filter: blur(20px);
        }

        .navbar-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1140px;
            margin: 0 auto;
            padding: 0 1.5rem;
        }

        .navbar-logo {
            font-size: 1.4rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.6rem;
            transition: all 0.3s ease;
            letter-spacing: -0.5px;
        }

        .navbar-logo i {
            font-size: 1.5rem;
        }

        .navbar.scrolled .navbar-logo {
            color: #667eea;
        }

        .navbar-links {
            display: flex;
            align-items: center;
            gap: 2.5rem;
            list-style: none;
            margin: 0 auto 0 0;
            padding: 0 0 0 3rem;
        }

        .navbar-links li {
            margin: 0;
        }

        .navbar-links a {
            color: rgba(255,255,255,0.95);
            text-decoration: none;
            font-weight: 500;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            position: relative;
            padding: 0.4rem 0;
            letter-spacing: 0.3px;
        }

        .navbar.scrolled .navbar-links a {
            color: #2d3748;
        }

        .navbar-links a:hover {
            color: #fff;
        }

        .navbar.scrolled .navbar-links a:hover {
            color: #667eea;
        }

        .navbar-links a::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: currentColor;
            transition: width 0.3s ease;
        }

        .navbar-links a:hover::after {
            width: 100%;
        }

        .navbar-auth {
            display: flex;
            gap: 0.75rem;
            align-items: center;
            margin-left: 1.5rem;
        }

        .navbar-auth .btn {
            padding: 0.5rem 1.5rem;
            border-radius: 6px;
            font-weight: 600;
            font-size: 0.88rem;
            transition: all 0.3s ease;
            text-decoration: none;
            border: 2px solid;
            letter-spacing: 0.3px;
        }

        .btn-login {
            background: transparent;
            color: white;
            border-color: rgba(255,255,255,0.8);
        }

        .navbar.scrolled .btn-login {
            color: #667eea;
            border-color: #667eea;
        }

        .btn-login:hover {
            background: white;
            color: #667eea;
            border-color: white;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255,255,255,0.3);
        }

        .navbar.scrolled .btn-login:hover {
            background: #667eea;
            color: white;
            box-shadow: 0 4px 12px rgba(102,126,234,0.3);
        }

        .btn-register {
            background: white;
            color: #667eea;
            border-color: white;
        }

        .navbar.scrolled .btn-register {
            background: #667eea;
            color: white;
            border-color: #667eea;
        }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102,126,234,0.4);
        }

        /* Mobile Menu */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .mobile-menu-toggle:hover {
            transform: scale(1.1);
        }

        .navbar.scrolled .mobile-menu-toggle {
            color: #2d3748;
        }

        @@media (max-width: 768px) {
            .navbar-links, .navbar-auth {
                display: none;
            }

            .mobile-menu-toggle {
                display: block;
            }

            .navbar-container {
                padding: 0 1rem;
            }

            .navbar-logo {
                font-size: 1.2rem;
            }
        }

        /* Hero Section - Personal & Professional */  
        .hero {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0 50px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -10%;
            width: 40%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: float 6s ease-in-out infinite;
        }

        .hero-content {
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
        }

        .hero-greeting {
            font-size: 1.4rem;
            font-weight: 500;
            margin-bottom: 15px;
            opacity: 0.95;
            animation: fadeInDown 0.8s ease;
        }

        .hero h1 {
            font-size: 3.5rem;
            font-weight: 800;
            margin-bottom: 20px;
            animation: fadeInDown 1s ease 0.2s both;
            line-height: 1.1;
            letter-spacing: -1px;
        }

        .highlight-name {
            background: linear-gradient(120deg, #ffffff 0%, #e0e7ff 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            position: relative;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 15px;
            opacity: 0.98;
            animation: fadeInUp 1s ease 0.4s both;
            letter-spacing: 0.5px;
        }

        .hero-description {
            font-size: 1.1rem;
            max-width: 650px;
            margin: 0 auto 30px;
            opacity: 0.92;
            animation: fadeInUp 1s ease 0.6s both;
            line-height: 1.7;
            font-weight: 400;
        }

        .hero-buttons {
            margin-top: 35px;
            animation: fadeInUp 1s ease 0.8s both;
        }

        .hero .btn {
            padding: 13px 35px;
            font-size: 1rem;
            border-radius: 8px;
           margin: 8px;
            transition: all 0.3s ease;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .hero .btn i {
            font-size: 0.95rem;
        }

        .hero .btn-light:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }

        .hero .btn-outline-light:hover {
            background: white;
            color: #667eea;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(255,255,255,0.3);
        }

        /* Hero Responsive */
        @@media (max-width: 768px) {
            .hero {
                padding: 70px 1rem 50px;
            }

            .hero-greeting {
                font-size: 1.2rem;
            }

            .hero h1 {
                font-size: 2.2rem;
                letter-spacing: -0.5px;
            }

            .hero-subtitle {
                font-size: 1.2rem;
            }

            .hero-description {
                font-size: 1rem;
                padding: 0 0.5rem;
            }

            .hero .btn {
                padding: 11px 25px;
                font-size: 0.95rem;
                margin: 5px;
            }
        }

        @@media (max-width: 576px) {
            .hero {
                padding: 60px 0.75rem 40px;
            }

            .hero h1 {
                font-size: 1.9rem;
            }

            .hero-subtitle {
                font-size: 1.1rem;
            }

            .hero-buttons {
                display: flex;
                flex-direction: column;
                gap: 10px;
            }

            .hero .btn {
                width: 100%;
                max-width: 280px;
                margin: 0 auto;
            }
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }

        /* Sections */
        section {
            padding: 80px 0;
        }

        section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 50px;
            color: #333;
        }

        /* About Section */
        .about-section {
            background: white;
        }

        .about-content {
            display: flex;
            align-items: center;
            gap: 50px;
            max-width: 1100px;
            margin: 0 auto;
        }

        .about-image {
            flex: 0 0 280px;
            text-align: center;
        }

        .about-image i {
            font-size: 220px;
            color: #667eea;
            opacity: 0.9;
        }

        .profile-photo {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #667eea;
            box-shadow: 0 8px 20px rgba(102,126,234,0.25);
        }

        .about-text {
            flex: 1;
        }

        .about-text h3 {
            font-size: 2.2rem;
            margin-bottom: 25px;
            color: #667eea;
            font-weight: 700;
        }

        .about-intro {
            font-size: 1.15rem;
            line-height: 1.8;
            margin-bottom: 20px;
            color: #2d3748;
        }

        .about-expertise {
            font-size: 1.05rem;
            line-height: 1.8;
            margin-bottom: 25px;
            color: #4a5568;
        }

        .about-contact {
            margin-top: 30px;
            padding-top: 25px;
            border-top: 2px solid #e2e8f0;
        }

        .about-contact p {
            font-size: 1rem;
            margin-bottom: 12px;
            color: #2d3748;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .about-contact i {
            color: #667eea;
            font-size: 1.1rem;
            width: 20px;
        }

        @@media (max-width: 768px) {
            .about-content {
                flex-direction: column;
                gap: 30px;
            }

            .about-image {
                flex: 0 0 auto;
            }

            .about-image i {
                font-size: 150px;
            }

            .about-text h3 {
                font-size: 1.8rem;
                text-align: center;
            }

            .about-intro, .about-expertise {
                font-size: 1rem;
            }
        }

        /* Portfolio Section */
        .portfolio-card {
            border: none;
            border-radius: 15px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .portfolio-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.2);
        }

        .portfolio-card img {
            height: 200px;
            object-fit: cover;
        }

        .portfolio-card .card-body {
            padding: 25px;
        }

        .portfolio-badge {
            background: linear-gradient(135deg, #4e73df 0%, #224abe 100%);
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.85rem;
            display: inline-block;
            margin-bottom: 10px;
        }

        .portfolio-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
        }

        .portfolio-icon i {
            font-size: 28px;
            color: white;
        }

        /* Skills Section */
        .skills-section {
            background: #f8f9fa;
        }

        .skill-item {
            margin-bottom: 30px;
        }

        .skill-item h5 {
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
        }

        .progress {
            height: 25px;
            border-radius: 15px;
            overflow: hidden;
        }

        .progress-bar {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            font-weight: 600;
            line-height: 25px;
        }

        /* Portfolio & Skills Mobile Responsive */
        @@media (max-width: 768px) {
            .portfolio-card .card-body {
                padding: 20px;
            }

            .portfolio-icon {
                width: 50px;
                height: 50px;
            }

            .portfolio-icon i {
                font-size: 24px;
            }

            .portfolio-card .card-title {
                font-size: 1.1rem;
            }

            .skills-section .col-md-6 {
                margin-bottom: 15px;
            }
        }

        @@media (max-width: 576px) {
            .portfolio-card {
                margin-bottom: 20px;
            }

            .portfolio-card .card-body {
                padding: 18px;
            }

            .portfolio-badge {
                font-size: 0.8rem;
                padding: 4px 12px;
            }

            .skill-item h5 {
                font-size: 0.95rem;
            }
        }

        /* Contact Section */
        .contact-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .contact-section h2 {
            color: white;
        }

        .contact-form .form-control {
            border-radius: 10px;
            padding: 12px;
            border: none;
            margin-bottom: 15px;
        }

        .contact-form .btn {
            width: 100%;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
        }

        /* Footer */
        footer {
            background: #1a1a1a;
            color: #999;
            padding: 10px 0;
            text-align: center;
        }

        footer a {
            color: #667eea;
            text-decoration: none;
        }

        footer a:hover {
            color: #764ba2;
        }

        /* Contact & Footer Mobile Responsive */
        @@media (max-width: 768px) {
            .contact-section .container {
                padding: 0 1.5rem;
            }

            .contact-section {
                padding: 40px 0 !important;
            }

            .contact-form .form-control {
                font-size: 0.95rem;
                padding: 12px 15px;
            }

            .contact-form button {
                width: 100%;
            }

            footer p {
                font-size: 0.9rem;
            }

            .mobile-menu-toggle {
                display: block;
                margin-left: 75px;
            }
        }

        @@media (max-width: 576px) {
            section h2 {
                font-size: 2rem;
            }

            .contact-section {
                padding: 30px 0 !important;
            }

            .contact-section h2 {
                font-size: 2rem;
            }

            footer {
                padding: 25px 0;
            }

            .mobile-menu-toggle {
                margin-left: 50px;
            }
        }

        /* Animations */
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
            opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
