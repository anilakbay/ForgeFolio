@model List<Message>

@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Messages</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Incoming Messages List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform actions related to messages from the panel below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Sender</th>
									<th scope="col">Subject</th>
									<th scope="col">Date</th>
									<th scope="col">Open Message</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.MessageId</td>
										<td>@item.NameSurname</td>
										<td>@item.Subject</td>
										<td>@item.MessageDate.ToShortDateString()</td>
										<td><a href="/Experience/DeleteExperience/@item.MessageId" class="btn btn-warning">Open Message</a></td>
										<td><a href="/Experience/UpdateExperience/@item.MessageId" class="btn btn-dark">Change the situation!</a></td>
										<td><a href="/Experience/UpdateExperience/@item.MessageId" class="btn btn-danger">Delete</a></td>
										<td><a href="/Experience/UpdateExperience/@item.MessageId" class="btn btn-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

