@model IEnumerable<ForgeFolio.Core.DTOs.SocialMedia.SocialMediaDto>
@{
    ViewData["Title"] = "Social Media";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Social Media Accounts</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Icon</th>
            <th>URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td><i class="@item.Icon"></i> @item.Icon</td>
                <td><a href="@item.Url" target="_blank">Link</a></td>
                <td>
                    <a href="/SocialMedia/Update/@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/SocialMedia/Delete/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
