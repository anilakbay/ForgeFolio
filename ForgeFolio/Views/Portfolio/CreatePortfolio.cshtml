@model ForgeFolio.Core.DTOs.Portfolio.CreatePortfolioDto

@{
    ViewData["Title"] = "Yeni Proje Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 font-weight-bold text-dark">Yeni Proje Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Statistic/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Portfolio/Index">Portfolio</a></li>
                    <li class="breadcrumb-item active">Yeni Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-10">
                <div class="card shadow-lg border-0" style="border-radius: 20px;">
                    <div class="card-header bg-primary text-white py-3" style="border-top-left-radius: 20px; border-top-right-radius: 20px;">
                        <h3 class="card-title font-weight-bold mb-0">
                            <i class="fas fa-magic mr-2"></i> Proje Detayları
                        </h3>
                    </div>
                   
                    <form asp-action="CreatePortfolio" method="post">
                        <div class="card-body p-5">
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <i class="fas fa-exclamation-triangle mr-2"></i> Lütfen aşağıdaki hataları düzeltin.
                                    <div asp-validation-summary="All" class="text-danger mt-2"></div>
                                </div>
                            }

                            <!-- Temel Bilgiler -->
                            <h5 class="text-primary border-bottom pb-2 mb-4"><i class="fas fa-info-circle mr-2"></i> Temel Bilgiler</h5>
                            
                            <div class="form-group mb-4">
                                <label asp-for="Title" class="font-weight-bold text-dark">Proje Başlığı <span class="text-danger">*</span></label>
                                <input asp-for="Title" class="form-control form-control-lg rounded-pill px-4 border-light shadow-sm" placeholder="Örn: E-Ticaret Sistemi" />
                                <span asp-validation-for="Title" class="text-danger small pl-3"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="SubTitle" class="font-weight-bold text-dark">Alt Başlık / Kategori <span class="text-danger">*</span></label>
                                <input asp-for="SubTitle" class="form-control rounded-pill px-4 border-light shadow-sm" placeholder="Örn: Web Geliştirme, Mobil Uygulama" />
                                <span asp-validation-for="SubTitle" class="text-danger small pl-3"></span>
                            </div>

                            <!-- Görseller ve Linkler -->
                            <h5 class="text-primary border-bottom pb-2 mb-4 mt-5"><i class="fas fa-link mr-2"></i> Medya ve Bağlantılar</h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="ImageUrl" class="font-weight-bold text-dark">Görsel URL 1 (Ana Resim)</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-white border-light border-right-0 rounded-left"><i class="fas fa-image text-muted"></i></span>
                                            </div>
                                            <input asp-for="ImageUrl" class="form-control border-left-0 border-light shadow-sm" placeholder="https://..." />
                                        </div>
                                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-4">
                                        <label asp-for="ImageUrl2" class="font-weight-bold text-dark">Görsel URL 2 (Opsiyonel)</label>
                                          <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text bg-white border-light border-right-0 rounded-left"><i class="fas fa-images text-muted"></i></span>
                                            </div>
                                            <input asp-for="ImageUrl2" class="form-control border-left-0 border-light shadow-sm" placeholder="https://..." />
                                        </div>
                                        <span asp-validation-for="ImageUrl2" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                             <div class="form-group mb-4">
                                <label asp-for="ProjectUrl" class="font-weight-bold text-dark">Proje Linki</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white border-light border-right-0 rounded-left"><i class="fas fa-globe text-muted"></i></span>
                                    </div>
                                    <input asp-for="ProjectUrl" class="form-control border-left-0 border-light shadow-sm" placeholder="https://github.com/..." />
                                </div>
                                <small class="form-text text-muted pl-3">GitHub reposu veya canlı site linki.</small>
                                <span asp-validation-for="ProjectUrl" class="text-danger small"></span>
                            </div>

                            <!-- Açıklama -->
                            <h5 class="text-primary border-bottom pb-2 mb-4 mt-5"><i class="fas fa-align-left mr-2"></i> Detaylı Açıklama</h5>

                            <div class="form-group mb-4">
                                <label asp-for="Description" class="font-weight-bold text-dark">Proje Açıklaması</label>
                                <textarea asp-for="Description" class="form-control border-light shadow-sm" rows="5" style="border-radius: 15px;" placeholder="Proje hakkında detaylı bilgi..."></textarea>
                                <span asp-validation-for="Description" class="text-danger small pl-3"></span>
                            </div>

                             <div class="form-group col-md-4">
                                <label asp-for="Price" class="font-weight-bold text-dark">Fiyat / Değer (Opsiyonel)</label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text bg-white border-light border-right-0 rounded-left"><i class="fas fa-lira-sign text-muted"></i></span>
                                    </div>
                                    <input asp-for="Price" type="number" step="0.01" class="form-control border-left-0 border-light shadow-sm" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="card-footer bg-light px-5 py-4 text-right">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 mr-2">
                                <i class="fas fa-arrow-left mr-1"></i> İptal
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                                <i class="fas fa-save mr-2"></i> Projeyi Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
