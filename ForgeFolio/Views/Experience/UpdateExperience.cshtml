@model Experience

@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Experience</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Experience Update Page</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="ExperienceId" />
							<label>Company Information</label>
							<input type="text" class="form-control" asp-for="Head" />
							<br />
							<label>Position Held</label>
							<input type="text" class="form-control" asp-for="Title" />
							<br />
							<label>Date Range</label>
							<input type="text" class="form-control" asp-for="Date" />
							<br />
							<label>Description</label>
							<textarea rows="4" class="form-control" asp-for="Description"></textarea>
							<br />
							<button class="btn btn-warning">Update Your Experience!</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>



