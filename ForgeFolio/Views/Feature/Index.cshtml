@model IEnumerable<ForgeFolio.Core.DTOs.Feature.FeatureDto>
@{
    ViewData["Title"] = "Özellikler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["BodyClass"] = "page-features";
    ViewData["PageIcon"] = "⭐";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Özellikler</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Features</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @await Html.PartialAsync("_TempDataMessages")
        
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Özellik Listesi</h3>
                <div class="card-tools">
                    <a asp-action="CreateFeature" class="btn btn-success btn-sm">
                        <i class="fas fa-plus"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Başlık</th>
                            <th>İkon</th>
                            <th>Açıklama</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td><i class="@item.Icon"></i> @item.Icon</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="UpdateFeature" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="DeleteFeature" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                       onclick="return confirm('Bu özelliği silmek istediğinize emin misiniz?')">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
