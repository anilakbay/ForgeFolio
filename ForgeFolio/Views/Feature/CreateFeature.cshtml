@{
    ViewData["Title"] = "Yeni Feature Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["BodyClass"] = "page-features";
    ViewData["PageIcon"] = "⭐";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Yeni Feature Ekle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Features</a></li>
                    <li class="breadcrumb-item active">Yeni Ekle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header" style="background: linear-gradient(135deg, #ff6f3c 0%, #ff4e00 100%); color: white;">
                <h3 class="card-title">Feature Bilgileri</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="form-group">
                        <label for="title">Başlık</label>
                        <input type="text" class="form-control" id="title" name="Title" placeholder="Örn: Responsive Tasarım" required>
                    </div>
                    <div class="form-group">
                        <label for="header">Header</label>
                        <input type="text" class="form-control" id="header" name="Header" placeholder="Kısa başlık">
                    </div>
                    <div class="form-group">
                        <label for="nameSurname">İsim Soyisim</label>
                        <input type="text" class="form-control" id="nameSurname" name="NameSurname" placeholder="Örn: Anil Akbay">
                    </div>
                    <div class="form-group">
                        <label for="description">Açıklama</label>
                        <textarea class="form-control" id="description" name="Description" rows="4" placeholder="Feature açıklaması..."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="icon">İkon (FontAwesome)</label>
                        <input type="text" class="form-control" id="icon" name="Icon" placeholder="Örn: fa-mobile-alt">
                        <small class="form-text text-muted">
                            <a href="https://fontawesome.com/icons" target="_blank">FontAwesome icon listesi</a>
                        </small>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-warning text-white" style="background: #ff6f3c; border-color: #ff6f3c;">
                        <i class="fas fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> İptal
                    </a>
                </div>
            </form>
        </div>

        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> <strong>Not:</strong> Bu form şu anda placeholder modundadır.
        </div>
    </div>
</section>
