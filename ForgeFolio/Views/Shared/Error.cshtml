@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="text-center mt-5">
    <h1 class="text-danger display-4">Oops! Something went wrong.</h1>
    <p class="lead">We encountered an unexpected error while processing your request.</p>
    <p>Please try again later or contact support if the problem persists.</p>

    @if (Model.ShowRequestId)
    {
        <div class="alert alert-secondary d-inline-block mt-3">
            <small>Support ID: <strong>@Model.RequestId</strong></small>
        </div>
    }
    
    <div class="mt-4">
        <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Go to Home</a>
    </div>
</div>
