<section class="content">
    <div class="container-fluid">
        @await Html.PartialAsync("_TempDataMessages")
        
        <div class="card">
            <div class="card-header" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); color: white;">
                <h3 class="card-title">Testimonial Listesi</h3>
                <div class="card-tools">
                    <a asp-action="CreateTestimonial" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Yeni Ekle
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <div class="text-center mb-3">
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "https://via.placeholder.com/150" : item.ImageUrl)" alt="@item.ClientName" class="img-circle img-fluid" style="width: 100px; height: 100px;">
                                    </div>
                                    <h5 class="text-center">@item.ClientName</h5>
                                    <p class="text-muted text-center">@item.CompanyName</p>
                                    <p class="text-center">" @item.Comment "</p>
                                    <div class="text-center">
                                        <a asp-action="UpdateTestimonial" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-edit"></i> DÃ¼zenle
                                        </a>
                                        <a asp-action="DeleteTestimonial" asp-route-id="@item.Id" class="btn btn-danger btn-sm"
                                           onclick="return confirm('Bu testimonial silinecek, emin misiniz?')">
                                            <i class="fas fa-trash"></i> Sil
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
